<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.indo.admin.modules.mem.mapper.MemRebateRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.indo.admin.modules.mem.entity.MemRebateRecord">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="mem_id" property="memId"/>
        <result column="mem_level" property="memLevel"/>
        <result column="mem_group_id" property="memGroupId"/>
        <result column="mem_real_name" property="memRealName"/>
        <result column="parant_agent_id" property="parantAgentId"/>
        <result column="team_members" property="teamMembers"/>
        <result column="team_bets" property="teamBets"/>
        <result column="yesterday_balance" property="yesterdayBalance"/>
        <result column="rebate_amout" property="rebateAmout"/>
        <result column="operator" property="operator"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_time,
        update_time,
        id, mem_id, mem_level, mem_group_id, mem_real_name, parant_agent_id, team_members, team_bets, yesterday_balance,
        rebate_amout, operator
    </sql>

    <select id="queryList" resultMap="BaseResultMap">
        SELECT * FROM mem_rebate_record m
        <where>
            <if test="dto.memId !=null">
                and m.mem_id = #{dto.memId}
            </if>
            <if test="dto.startTime != null and dto.startTime != ''">
                and m.create_time &gt;= #{dto.startTime}
            </if>
            <if test="dto.endTime != null and dto.endTime != ''">
                and m.create_time &lt; #{dto.endTime}
            </if>
        </where>
        ORDER BY m.create_time desc
    </select>
</mapper>
