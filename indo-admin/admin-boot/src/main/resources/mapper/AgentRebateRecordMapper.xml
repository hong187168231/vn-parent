<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.indo.admin.modules.mem.mapper.AgentRebateRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.indo.admin.pojo.vo.agent.AgentRebateRecordVO">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="mem_id" property="memId"/>
        <result column="mem_level" property="memLevel"/>
        <result column="mem_real_name" property="realName"/>
        <result column="yesterday_remain" property="yesterdayRemain"/>
        <result column="rebate_amout" property="rebateAmout"/>
        <result column="create_user" property="createUser"/>
    </resultMap>


    <select id="queryList" resultMap="BaseResultMap">
        SELECT * FROM mem_rebate_record m
        <where>
            <if test="dto.memId !=null">
                and m.mem_id = #{dto.memId}
            </if>
            <if test="dto.startTime != null and dto.startTime != ''">
                and m.create_time &gt;= #{dto.startTime}
            </if>
            <if test="dto.endTime != null and dto.endTime != ''">
                and m.create_time &lt; #{dto.endTime}
            </if>
        </where>
        ORDER BY m.create_time desc
    </select>
</mapper>
