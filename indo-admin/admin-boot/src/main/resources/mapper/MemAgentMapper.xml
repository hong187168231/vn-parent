<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.indo.admin.modules.mem.mapper.MemAgentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.indo.admin.modules.mem.entity.MemAgent">
        <id column="agent_id" property="agentId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="mem_id" property="memId"/>
        <result column="team_num" property="teamNum"/>
        <result column="level_user_ids" property="levelUserIds"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_del" property="isDel"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_time,
        update_time,
        agent_id, mem_id, team_num, level_user_ids, parent_id, is_del, remark
    </sql>

    <select id="queryList" resultMap="BaseResultMap">
        SELECT * FROM mem_agent ma
        where ma.is_del = 0
        <if test="req.memId !=null">
            and ma.memId = #{req.memId}
        </if>
        <if test="req. !=null and req.mobile !=''">
            and ma.mobile = #{req.mobile}
        </if>
        ORDER BY ma.create_time desc
    </select>

    <select id="subordinateList" resultMap="BaseResultMap">
        SELECT * FROM mem_agent ma
        where ma.is_del = 0
        <if test="req.memId !=null">
            and ma.parentId = #{req.memId}
        </if>
        ORDER BY ma.create_time desc
    </select>
</mapper>
