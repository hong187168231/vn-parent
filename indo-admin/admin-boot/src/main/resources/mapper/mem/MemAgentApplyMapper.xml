<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.indo.admin.modules.mem.mapper.MemAgentApplyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.indo.admin.pojo.vo.agent.AgentApplyVO">
        <id column="agent_apply_id" property="agentApplyId"/>
        <result column="create_time" property="createTime"/>
        <result column="mem_id" property="memId"/>
        <result column="status" property="status"/>
        <result column="reject_reason" property="rejectReason"/>
    </resultMap>


    <select id="queryList" resultMap="BaseResultMap">
        SELECT * FROM mem_agent_apply maa
        where maa.status = 0
        <if test="req.memId !=null">
            and maa.mem_id = #{req.memId}
        </if>
        ORDER BY ma.create_time desc
    </select>
</mapper>
